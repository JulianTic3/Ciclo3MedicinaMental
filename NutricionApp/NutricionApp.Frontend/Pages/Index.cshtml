@page
@model NutricionApp.Frontend.Pages.IndexModel
@using NutricionApp.Dominio
@{
    ViewData["Title"] = "Home page";
}

<div class="text-center">
    <h1 class="display-4">NutricionApp</h1>
    <h2>Iniciar Sesion.</h2>

    <form method="POST">
        <div class="form-group">
            <label>Usuario </label>
            <input asp-for="@Model.id" type="text"  class="col-md-3" placeholder="Documento de identidad" required />
        </div>
        <div class="form-group">
            <label>Contraseña</label>
            <input class="col-md-3" type="password" placeholder="Contraseña" required>
        </div>
        <button type="submit" class="btn btn-primary">Iniciar Sesión</button>
        <a asp-page="/Registrarse/Registrarse" class="btn btn-secondary">Registrarse</a>
    </form>

</div>
