@page
@model NutricionApp.Frontend.Pages.Nutricionistas.EliminarModel
@{
}

<br>
<h1>Eliminar Datos del Nutricionista</h1>
<br>
<form method="post">
  <div class="form-group">
    <div class="row">
      <div class="col-md-2">
        <label>Id</label>
      </div>
      <div class="col-md-1">
        <input asp-for="Nutricionista.Id" class="form-control" readonly required>
      </div>
    </div>
  </div>

  <div class="form-group">
    <div class="row">
      <div class="col-md-2">
        <label>Identificación</label>
      </div>
      <div class="col-md-4">
        <input asp-for="Nutricionista.Identificacion" class="form-control" required>
      </div>
    </div>
  </div>

  <div class="form-group">
    <div class="row">
      <div class="col-md-2">
        <label>Nombres</label>
      </div>
      <div class="col-md-4">
        <input asp-for="Nutricionista.Nombre" class="form-control" required>
      </div>
    </div>
  </div>

  <div class="form-group">
    <div class="row">
      <div class="col-md-2">
        <label>Apellidos</label>
      </div>
      <div class="col-md-4">
        <input asp-for="Nutricionista.Apellidos" class="form-control" required>
      </div>
    </div>
  </div>

  <div class="form-group">
    <div class="row">
      <div class="col-md-2">
        <label>Teléfono</label>
      </div>
      <div class="col-md-4">
        <input asp-for="Nutricionista.Telefono" class="form-control" required>
      </div>
    </div>
  </div>

  <div class="form-group">
    <div class="row">
      <div class="col-md-3">
        <label>Correo Electrónico</label>
      </div>
      <div class="col-md-3">
        <input asp-for="Nutricionista.Correo" class="form-control" required>
      </div>
    </div>
  </div>

  <div class="form-group">
    <div class="row">
      <div class="col-md-3">
        <label>Tarjeta Profesional</label>
      </div>
      <div class="col-md-3">
        <input asp-for="Nutricionista.TarjetaProfesional" class="form-control" required>
      </div>
    </div>
  </div>

  <div class="form-group">
    <div class="row">
      <div class="col-md-2">
        <label>Contraseña</label>
      </div>
      <div class="col-md-4">
        <input asp-for="Nutricionista.Contrasena" class="form-control" type="password" required>
      </div>
    </div>
  </div>
  <div class="col-12">
    <br>
    <button type="submit" class="btn btn-primary">Eliminar Información</button>
    <a asp-page="Lista" class="btn btn-success" form-control>Atrás</a>
  </div>

</form>