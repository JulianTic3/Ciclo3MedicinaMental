@page
@model NutricionApp.Frontend.Pages.Pacientes.ActualizarModel
@using NutricionApp.Dominio
@{
}
<div class="d-flex flex-column align-items-center">
    <h1 class="mb-3">Actualiza Tus Datos</h1>
    <form class="row g-3 align-items-baseline" method="post">
        <div class="col-2"></div>
        <div class="form-group col-6 col-sm-4">
            <label class="form-label" asp-for="Paciente.Nombre"></label>
            <input class="form-control" asp-for="Paciente.Nombre" readonly/>
        </div>
        <div class="form-group col-6 col-sm-4">
            <label class="form-label" asp-for="Paciente.Apellidos"></label>
            <input class="form-control" asp-for="Paciente.Apellidos" readonly />
        </div>
        <div class="w-100 d-none d-md-block"></div>
        <div class="col-2"></div>
        <div class="form-group col-6 col-sm-4">
            <label class="form-label">Número de Identificación</label>
            <input class="form-control" asp-for="Paciente.Identificacion" readonly />
            <span asp-validation-for="Paciente.Identificacion" class="text-danger"></span>
        </div>
        <div class="form-group col-6 col-sm-4">
            <label class="form-label" asp-for="Paciente.Telefono"></label>
            <input class="form-control" asp-for="Paciente.Telefono" required/>
        </div>
        <div class="w-100 d-none d-md-block"></div>
        <div class="col-2"></div>
        <div class="form-group col-6 col-sm-4">
            <label class="form-label" asp-for="Paciente.Correo"></label>
            <input type="email" class="form-control" asp-for="Paciente.Correo" required/>
        </div>
        <div class="w-100 d-none d-md-block"></div>
        <div class="col-2"></div>
        <div class="form-group col-6 col-sm-4">
            <label class="form-label">Fecha de Nacimiento</label>
            <input type="date" asp-for="Paciente.FechaNacimiento" class="form-control" readonly/>
            <span asp-validation-for="Paciente.FechaNacimiento" class="text-danger"></span>
        </div>
        <div class="form-group col-6 col-sm-4">
            <label asp-for="Paciente.Genero" class="form-label"></label>
            <select asp-for="Paciente.Genero" asp-
                    asp-items="Html.GetEnumSelectList<Genero>()" class="form-control" required>
                <option value="">Escoja una opción</option>
            </select>
            <span asp-validation-for="Paciente.Genero" class="text-danger"></span>
        </div>
        <div class="w-100 d-none d-md-block"></div>
        <div class="col-2"></div>
        <div class="form-group col-6 col-sm-4">
            <label asp-for="Paciente.Ciudad" class="form-label"></label>
            <input asp-for="Paciente.Ciudad" class="form-control" required/>
            <span asp-validation-for="Paciente.Ciudad" class="text-danger"></span>
        </div>
        <div class="form-group col-6 col-sm-4">
            <label class="form-label" asp-for="Paciente.Direccion"></label>
            <input asp-for="Paciente.Direccion" class="form-control" required/>
            <span asp-validation-for="Paciente.Direccion" class="text-danger"></span>
        </div>
        <input type="hidden" asp-for="Paciente.Id" readonly/>
        <div class="w-100 d-none d-md-block"></div>
        <div class="col-2"></div>
        <div class="d-flex col-8 mx-auto mt-5">
            <button class="btn btn-lg btn-primary col-4 mr-5" type="submit">Guardar</button>
            <a asp-page="./Index" class="btn btn-lg btn-danger col-4">Cancelar</a>
        </div>
    </form>
</div>