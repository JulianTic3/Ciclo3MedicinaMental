@page
@model NutricionApp.Frontend.Pages.Historias.CrearModel
@using NutricionApp.Dominio
@{
}
<form class="row" method="post">
    <div class="form-group col-4">
        <label asp-for="Paciente.Nombre"></label>
        <input type="text" asp-for="Paciente.Nombre" class="form-control" value="@Model.Paciente.Nombre">
    </div>
    <div class="form-group col-4">
        <label asp-for="Paciente.Apellidos"></label>
        <input type="text" asp-for="Paciente.Apellidos" class="form-control" value="@Model.Paciente.Apellidos">
    </div>
    <div class="w-100"></div>
    <div class="form-group col-4">
        <label asp-for="Historia.Fecha"></label>
        <input type="date" class="form-control" asp-for="Historia.Fecha" value="@DateTime.Now.ToString("yyyy-MM-dd")" required/>
    </div>
    <div class="w-100"></div>
    <div class="form-group col-6">
        <label asp-for="Historia.Diagnostico"></label>
        <textarea asp-for="Historia.Diagnostico" rows="3" class="form-control" maxlength="500"  required></textarea>
    </div>
    <div class="w-100"></div>
    <div class="col-5"></div>
    <input type="hidden" asp-for="Paciente.Id" value="@Model.Paciente.Id">
    <input type="submit" value="Guardar Historia" class="btn btn-primary mt-3">
</form>