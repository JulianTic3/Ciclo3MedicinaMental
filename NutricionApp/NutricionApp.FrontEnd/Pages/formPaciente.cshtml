@page
@model NutricionApp.FrontEnd.Pages.formPacienteModel
@{
    <div class="myForm">
        <form action="" method="post">
            <div class="row">
                <div class="col-md-6 mb-4">
                    <label>Nombres</label>
                    <input class="form-control" type="text" id="nombre" name="nombre" placeholder="Nombres"
                        aria-label="Nombres" aria-required="true" required />
                </div>
                <div class="col-md-6 mb-4">
                    <label class="form-control-label" for="direccion">Apellidos</label>
                    <input class="form-control" type="text" name="apellidos" id="apellidos" placeholder="Apellidos"
                        aria-label="Apellidos" aria-required="true" required />
                </div>
                <div class="col-md-6 mb-4">
                    <label class="form-control-label" for="cedula">N° Identificación</label>
                    <input class="form-control" type="text" name="cedula" id="cedula" placeholder="N° de indentificación"
                        aria-label="Cédula" aria-required="true" required />
                </div>
                <div class="col-md-6 mb-4">
                    <label class="form-control-label" for="direccion">Dirección</label>
                    <input class="form-control" type="text" name="direccion" id="direccion"
                        placeholder="Dirección de Residencia" aria-label="Dirección" aria-required="true" required />
                </div>
                <div class="col-md-6 mb-4">
                    <label class="form-control-label" for="telefono">Teléfono</label>
                    <input class="form-control" type="text" name="telefono" id="telefono" placeholder="Teléfono"
                        aria-label="Teléfono" aria-required="true" required />
                </div>
                <div class="col-md-6 mb-4">
                    <label class="form-control-label" for="correo">Correo</label>
                    <input class="form-control" type="email" name="correo" id="correo" placeholder="Example@mail.com"
                        aria-label="Email" aria-required="true" required />
                </div>
                <div class="col-md-7 mb-4">
                    <label class="form-control-label" for="nacimiento">Fecha de Nacimiento</label>
                    <input class="form-control" type="date" name="nacimiento" id="nacimiento" placeholder="01/01/1900"
                        aria-label="Fecha de Nacimiento" aria-required="true" required />
                </div>
                <div class="col-md-6 mb-4">
                    <label class="form-control-label" for="latitud">Latitud</label>
                    <input class="form-control" type="number" step="0.000001" name="latitud" id="latitud" placeholder="0.0"
                        aria-label="Latitud" aria-required="true" required />
                </div>
                <div class="col-md-6 mb-4">
                    <label class="form-control-label" for="longitud">Longitud</label>
                    <input class="form-control" type="number" step="0.000001" name="longitud" id="longitud"
                        placeholder="0.0" aria-label="Longitud" aria-required="true" required />
                </div>
                <div class="d-flex justify-content-around mx-auto w-100">
                    <div class="col-md-2">
                        <input class="btn btn-success btn-lg" type="submit" value="Registrar" name="registrar" id="registrar"
                            aria-label="Registrar" />
                    </div>
                    <div class="col-md-2">
                        <input class="btn btn-info btn-lg" type="submit" value="Actualizar" name="actualizar" id="actualizar"
                            aria-label="Actualizar" />
                    </div>
                    <div class="col-md-2">
                        <a href="../"><button class="btn btn-danger btn-lg">Regresar</button></a>
                    </div>
                </div>
            </div>
        </form>
    </div>
}
